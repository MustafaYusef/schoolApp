<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="serviceItem"
            type="com.smart.resources.schools_app.features.rating.RatingModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rate_student"
            android:textSize="@dimen/toolbar_tile_size"
            android:padding="12dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/bahij_the_sans_arabic_extra_bold"/>

        <EditText
            android:id="@+id/ratingNotes"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="@string/notes"
            android:fontFamily="@font/bahij_the_sans_arabic_extra_bold"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_margin="18dp" />


        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:fontFamily="@font/bahij_the_sans_arabic_extra_bold"

            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            tools:text="1" />

        <LinearLayout
            android:id="@+id/numberPickerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/decreaseBtn"
                android:elevation="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:src="@drawable/ic_remove_white_24dp"
                android:background="@drawable/bg_circle_primary"/>


            <TextView

                android:id="@+id/numOfItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="1"
                android:layout_marginStart="18dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/bahij_the_sans_arabic_extra_bold"
                />

            <ImageView
                android:id="@+id/increaseBtn"
                android:elevation="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_white_24dp"
                android:padding="4dp"
                android:background="@drawable/bg_circle_primary" />
        </LinearLayout>

        <Button
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_btn_red_radient"
            android:elevation="2dp"
            android:fontFamily="@font/bahij_the_sans_arabic_extra_bold"
            android:paddingStart="58dp"
            android:paddingEnd="58dp"
            android:text="@string/rate"
            android:textColor="@android:color/white" />

    </LinearLayout>
</layout>