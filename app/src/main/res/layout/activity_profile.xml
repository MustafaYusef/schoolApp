<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>
        <import type="android.view.View" />
        <import type="com.smart.resources.schools_app.features.profile.CertificateState" />

        <variable
            name="itemModel"
            type="com.smart.resources.schools_app.features.profile.UserModel" />

        <variable
            name="teacherModel"
            type="com.smart.resources.schools_app.features.profile.TeacherModel" />

        <variable
            name="model"
            type="com.smart.resources.schools_app.features.profile.ProfileViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layoutDirection="rtl">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            tools:context=".features.profile.ProfileActivity">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_profile_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:fontFamily="@font/monadi"
                    android:includeFontPadding="true"
                    android:text="@string/profile"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/profileAttributeTitleSize" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="selectMultiAccount"
                    android:src="@drawable/ic_multi_account_white_24dp" />

            </androidx.appcompat.widget.Toolbar>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="170dp"
                android:backgroundTint="@android:color/white"
                android:background="@drawable/background_circle_white"
                android:elevation="8dp"
                android:onClick="selectImage"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/studentCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="4dp"
                android:drawablePadding="@dimen/edit_text_drawable_padding"
                android:fontFamily="@font/monadi"
                android:padding="@dimen/edit_text_padding"
                android:shadowColor="@color/shadowColor"
                android:shadowDx="1"
                android:shadowDy="4"
                android:shadowRadius="8"
                android:text="@{itemModel.name}"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textFontWeight="900"
                android:textSize="@dimen/profileAttributeTitleSize"
                app:layout_constraintBottom_toTopOf="@+id/profileImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="@string/username" />


            <TextView
                android:id="@+id/sectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_classes_black_24"
                android:drawablePadding="@dimen/edit_text_drawable_padding"
                android:maxLength="30"
                android:padding="@dimen/edit_text_padding"
                android:text="@string/the_class"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileAttributeTitleSize"
                app:layout_constraintBottom_toBottomOf="@+id/studentSection"
                app:layout_constraintEnd_toStartOf="@id/studentSection"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/studentSection"
                app:layout_constraintVertical_bias="0.49"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/teacherSubjectsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_book_black_24"
                android:drawablePadding="@dimen/edit_text_drawable_padding"
                android:maxLength="30"
                android:paddingStart="@dimen/edit_text_padding"
                android:text="@string/subjects"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileAttributeTitleSize"
                android:visibility="@{teacherModel == null? View.GONE: View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="@+id/subjects_spinner"
                app:layout_constraintEnd_toStartOf="@id/subjects_spinner"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/subjects_spinner" />


            <TextView
                android:id="@+id/teacherResponsibilityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_role_black_24"
                android:drawablePadding="@dimen/edit_text_drawable_padding"
                android:maxLength="30"
                android:padding="@dimen/edit_text_padding"
                android:text="@string/role"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileAttributeTitleSize"
                android:visibility="@{teacherModel == null? View.GONE: View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="@+id/teacherResponsibility"
                app:layout_constraintEnd_toStartOf="@id/teacherResponsibility"
                app:layout_constraintHorizontal_bias="0.542"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/teacherResponsibility"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/ageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_age_black_24dp"
                android:drawablePadding="@dimen/edit_text_drawable_padding"
                android:padding="@dimen/edit_text_padding"
                android:text="@string/age"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileAttributeTitleSize"
                app:layout_constraintBottom_toBottomOf="@+id/studentAge"
                app:layout_constraintEnd_toStartOf="@id/studentAge"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/studentAge" />


            <TextView
                android:id="@+id/phoneTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_phone_black_24"
                android:drawablePadding="@dimen/edit_text_drawable_padding"
                android:padding="@dimen/edit_text_padding"
                android:text="@string/phone"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileAttributeTitleSize"
                app:layout_constraintBottom_toBottomOf="@+id/studentPhone"
                app:layout_constraintEnd_toStartOf="@id/studentPhone"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/studentPhone" />

            <TextView
                android:visibility="@{itemModel.emailEmpty? View.GONE: View.VISIBLE}"
                android:id="@+id/emailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_email_black_24"
                android:drawablePadding="@dimen/edit_text_drawable_padding"
                android:padding="@dimen/edit_text_padding"
                android:text="@string/email"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileAttributeTitleSize"
                app:layout_constraintBottom_toBottomOf="@+id/studentEmail"
                app:layout_constraintEnd_toStartOf="@id/studentEmail"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/studentEmail" />

            <TextView
                android:id="@+id/genderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_gender_black_24"
                android:drawablePadding="@dimen/edit_text_drawable_padding"
                android:maxLength="30"
                android:padding="@dimen/edit_text_padding"
                android:text="@string/gender"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileAttributeTitleSize"
                app:layout_constraintBottom_toBottomOf="@+id/studentGender"
                app:layout_constraintEnd_toStartOf="@+id/studentGender"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/studentGender" />

            <TextView
                android:id="@+id/studentGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:text="@{itemModel.gender}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileAttributeSize"
                app:layout_constraintBottom_toTopOf="@+id/studentAge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/genderTitle"
                app:layout_constraintTop_toBottomOf="@+id/subjects_spinner"
                tools:text="ذكر" />


            <TextView
                android:id="@+id/subjects_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:text="@{teacherModel.subjectsAsString}"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileAttributeSize"
                android:visibility="@{teacherModel == null? View.GONE: View.VISIBLE}"
                app:layout_constraintBottom_toTopOf="@+id/studentGender"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/teacherSubjectsTitle"
                app:layout_constraintTop_toBottomOf="@+id/studentSection"
                app:layout_constraintVertical_bias="0.49"
                tools:text="رياضيات ,انكليزي" />


            <LinearLayout
                android:id="@+id/schoolCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/background_outline"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileImage">

                <ImageView
                    android:id="@+id/schoolImage"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginEnd="16dp"
                    android:srcUrl="@{itemModel.schoolImage}"
                    tools:src="@drawable/logo" />

                <TextView
                    android:id="@+id/schoolNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/monadi"
                    android:text="@{itemModel.schoolName}"
                    android:textSize="24sp"
                    tools:text="مدرسة المصادر الذكية" />

            </LinearLayout>




            <View
                android:id="@+id/chainHolder"
                android:layout_width="1dp"
                android:layout_height="1dp"
                app:layout_constraintEnd_toEndOf="@+id/profileImage"
                app:layout_constraintStart_toStartOf="@+id/profileImage"
                app:layout_constraintTop_toBottomOf="@+id/schoolCard"
                app:layout_constraintBottom_toTopOf="@+id/teacherResponsibility"
                app:layout_constraintVertical_chainStyle="spread"/>


            <TextView
                android:id="@+id/teacherResponsibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:text="@{teacherModel.responsibility}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileAttributeSize"
                android:visibility="@{teacherModel == null? View.GONE: View.VISIBLE}"
                app:layout_constraintBottom_toTopOf="@+id/studentSection"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/teacherResponsibilityTitle"
                app:layout_constraintTop_toBottomOf="@+id/chainHolder"
                app:layout_constraintVertical_chainStyle="spread_inside"
                tools:text="مدرس" />

            <TextView
                android:id="@+id/studentSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="@dimen/profile_attribute_margin"
                android:text="@{itemModel.classesAsString}"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileAttributeSize"
                app:layout_constraintBottom_toTopOf="@+id/subjects_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/sectionTitle"
                app:layout_constraintTop_toBottomOf="@+id/teacherResponsibility"
                tools:text="ب - 5" />


            <TextView
                android:id="@+id/studentAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:text="@{itemModel.age}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileAttributeSize"
                app:layout_constraintBottom_toTopOf="@+id/studentPhone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ageTitle"
                app:layout_constraintTop_toBottomOf="@+id/studentGender"
                tools:text="24 سنة" />


            <TextView
                android:id="@+id/studentPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="32dp"
                android:text="@{itemModel.phone}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileAttributeSize"
                app:layout_constraintBottom_toTopOf="@+id/studentEmail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/phoneTitle"
                app:layout_constraintTop_toBottomOf="@+id/studentAge"
                tools:text="07812345676" />

            <TextView
                android:id="@+id/studentEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="32dp"
                android:text="@{itemModel.email}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profileAttributeSize"
                android:textAlignment="viewEnd"
                android:visibility="@{itemModel.emailEmpty? View.GONE: View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/emailTitle"
                app:layout_constraintTop_toBottomOf="@+id/studentPhone"
                tools:text="test@gmail.com" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/certificateProgressIndicator"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:visibility="@{model.certificateState == CertificateState.UNKNOWN? View.VISIBLE: View.GONE}"
                android:layout_gravity="end|center"
                android:layout_marginEnd="@dimen/profile_bottom_bar_padding"
                android:outlineProvider="none"
                android:elevation="8dp"
                />

            <LinearLayout
                android:id="@+id/certificateBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/profile_bottom_bar_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="@{teacherModel == null? View.VISIBLE: View.GONE}">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.87"
                    android:fontFamily="@font/monadi"
                    android:text="@string/the_certificate"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/profileAttributeTitleSize" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/availabilityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.87"
                    android:textColor="@{model.certificateState == CertificateState.AVAILABLE? @color/white: @color/darkRed}"
                    android:textSize="@dimen/profileAttributeSize"
                    android:text="@{model.certificateStatusMsg}"
                    android:visibility="@{model.certificateState == CertificateState.UNKNOWN? View.GONE: View.VISIBLE}"
                    />

            </LinearLayout>


        </FrameLayout>
    </LinearLayout>
</layout>