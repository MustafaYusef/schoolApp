<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mine="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="itemModel"
            type="com.smart.resources.schools_app.features.exam.ExamModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item"
        android:layoutDirection="rtl"
        android:minHeight="@dimen/item_min_height"
        android:orientation="vertical"
        android:padding="@dimen/item_padding"
        android:elevation="@dimen/item_elevation"
        android:layout_marginBottom="@dimen/item_margin">

        <ImageView
            android:id="@+id/advertisementsIcon"
            android:layout_width="@dimen/item_icon_size"
            android:layout_height="@dimen/item_icon_size"
            android:src="@drawable/ic_exam"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/desc_ic_exam" />


        <TextView
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:id="@+id/examName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/monadi"
            android:includeFontPadding="true"
            app:layout_constraintBottom_toTopOf="@+id/contentText"
            app:layout_constraintStart_toEndOf="@+id/advertisementsIcon"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{itemModel.subjectName}"
            tools:text="اسم الامتحان" />


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            tools:text="8/10/2019"
            mine:setDate="@{itemModel.date}"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="@+id/examName"
            app:layout_constraintEnd_toStartOf="@+id/homeworkType"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/examName"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="2dp"
            android:includeFontPadding="false"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/examName"
            app:layout_constraintStart_toEndOf="@+id/examName"
            app:layout_constraintTop_toTopOf="@+id/examName"
            android:text="-" />

        <TextView

            android:id="@+id/contentText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/homeworkType"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/advertisementsIcon"
            app:layout_constraintTop_toBottomOf="@+id/examName"
            android:text="@{itemModel.note}"
            tools:text="ملاحظات تيست"
            />

        <TextView
            android:id="@+id/homeworkType"
            android:textAlignment="viewStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:setMark="@{itemModel.mark}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>