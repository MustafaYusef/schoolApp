<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>

        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:fontFamily">@font/samim</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
        <item name="editTextStyle">@style/MyEditTextStyle</item>

    </style>
    

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="MyEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:inputType">text</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DashTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/dash</item>

    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/monadi</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuestionTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/monadi</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="QuestionAnswerStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextColor">@android:color/darker_gray</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="questionTypeCountTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:padding">12dp</item>
        <item name="alpha">0.87</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:background">@drawable/background_card</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
